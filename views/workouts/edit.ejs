<% layout('layouts/boilerplate') %>  

    <div class="row shadow">
        <h1 class="text-center">Edit Workout</h1>
        <div class="col-6 offset-3">
            <form action="/workouts/<%= workout._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3 ">
                    <label class="form-label" for="workout">Workout</label>
                    <input class="form-control" type="text" id="workout" name="workout[workout]" placeholder='Type' required>

                </div>
                <div class="mb-3 ">
                    <label class="form-label" for="gym">Gym</label>
                    <input class="form-control" type="text" id="gym" name="workout[gym]" placeholder='Name' required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Address</label>
                    <input class="form-control" type="text" id="address" name="workout[address]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="date">Date</label>
                    <input class="form-control" type="text" id="date" name="workout[date]" placeholder='DD/MM/YY' required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="time">Time</label>
                    <input class="form-control" type="text" id="time" name="workout[time]" placeholder='HH:MM Local Time' required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="workout[description]" placeholder='About you. The workout. What to bring, expect?'
                        required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="workout[image]" required>
                </div>
                <div class="mb-3">
                <button class="btn btn-info">Update Workout</button>
            </div>
            <a href="/workouts/<%= workout._id %>">Back to workout.</a>
            </form> 
        </div>
    </div>