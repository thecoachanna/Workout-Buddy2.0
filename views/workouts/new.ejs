<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Create Workout</h1>
    <div class="col-6 offset-3">
        <form action="/workouts" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="gym">Gym</label>
                <input class="form-control" type="text" id="gym" name="workout[gym]" required>
                
            </div>
            <div class="mb-3">
                <label class="form-label" for="address">Address</label>
                <input class="form-control" type="text" id="address" name="workout[address]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="workout[image]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="workout[description]" required></textarea>
            </div>
            <div class="mb-3">
            <button class="btn btn-success">Add Workout</button>
        </div>
        </form> 
    </div>
</div>

